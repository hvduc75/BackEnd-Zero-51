<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.JS Basic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>
    <div style="padding-left:16px">
        <h2>List users Table</h2>
      </div>
      <table class="w3-table-all w3-hoverable">
        <thead>
          <tr class="w3-light-grey">
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < dataUser.length; i++) { %>
                <tr>
                    <td><%= dataUser[i].id %></td>
                    <td><%= dataUser[i].firstName %></td>
                    <td><%= dataUser[i].lastName %></td>
                    <td>
                        <a href="/detail/user/<%= dataUser[i].id%>">Detail</a>
                        <button type="button">Edit</button>
                        <button type="button">Delete</button>
                    </td>
                </tr>
            <%}%>
        </tbody>
      </table>
      <form action="/create-new-user" method="POST">
      <div class="create-user-container">
        <div><b>Create a new User:</b></div>
        <div>
            <label for="">First Name</label>
            <input type="text" name="firstName" id="">
        </div>
        <div>
            <label for="">Last Name</label>
            <input type="text" name="lastName" id="">
        </div>
        <div>
            <label for="">Email</label>
            <input type="text" name="email" id="">
        </div>
        <div>
            <label for="">Address</label>
            <input type="text" name="address" id="">
        </div>
        <div>
            <button type="submit" class="btn-submit">submit</button>
        </div>
      </div>
    </form>
</body>
</html>